<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextMainTitle" parent="Widget.Support.CoordinatorLayout">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/indigo</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingHorizontal">10dp</item>

    </style>

    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_marginVertical">5dp</item>
        <item name="backgroundTint">@color/light_purple</item>
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:textColor">@color/indigo</item>
        <item name="android:textColorHint">@color/additional_purple_2</item>
    </style>

    <style name="ProfileSecondaryText">
        <item name="android:textColor">@color/additional_purple_1</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingHorizontal">10dp</item>
    </style>
</resources>