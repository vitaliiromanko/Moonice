<resources>
    <!-- Base application theme. -->
    <style name="Theme.Moonice" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/dark_purple_blue</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="statusBarScrim" >@color/white_purple</item>

        <item name="colorAccent">@color/white_purple</item>
        <item name="colorSwitchThumbNormal">@color/indigo</item>
        <item name="android:colorForeground">@color/indigo</item>


        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textSelectHandle">@drawable/ic_star_night</item>
        <item name="android:textSelectHandleLeft">@drawable/ic_star_night</item>
        <item name="android:textSelectHandleRight">@drawable/ic_star_night</item>

        <item name="android:textColorHighlight">@color/indigo</item>

        <item name="android:textColorSecondary">@color/light_purple</item>
        <item name="android:listDivider">@color/indigo</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/dark_purple_blue</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>


    </style>

    <style name="UploadImageButtonStyle" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="backgroundTint">@color/white_purple</item>
        <item name="android:textColor">@color/indigo</item>
    </style>

    <style name="SearchTheme" parent="Widget.AppCompat.Light.SearchView">
        <item name="android:textColorHint">@color/light_purple</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:textColorPrimary">@color/white_purple</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DatePickerDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/light_purple</item>
        <item name="android:textColor">@color/white_purple</item>
        <item name="android:textColorSecondary">@color/light_purple</item>
        <item name="colorOnPrimary">@color/light_purple</item>
    </style>

    <style name="ProgressBarTheme" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateTint">@color/light_purple</item>
    </style>

    <style name="AlertDialogCustom" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:textColor">@color/white_purple</item>
        <item name="android:textSize">10sp</item>
        <item name="android:background">@color/dark_purple_blue</item>
        <item name="colorOnPrimary">@color/white_purple</item>
    </style>

    <style name="AlertDialogStyle" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:background">@color/transparent</item>
        <item name="android:windowBackground">@color/transparent</item>
    </style>

    <style name="AlertDialogTextStyle">
        <item name="android:textColor">@color/light_purple</item>
        <item name="android:textSize">19sp</item>
        <item name="fontFamily">@font/bauhaus_93</item>
    </style>

    <style name="IconDate" parent="Widget.AppCompat.ImageButton">
        <item name="tint">@color/white_purple</item>
        <item name="backgroundTint">@color/transparent</item>
    </style>

    <style name="TextDate">
        <item name="android:textColor">@color/white_purple</item>
    </style>

    <style name="EditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:backgroundTint">@color/light_purple</item>
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:textColor">@color/white_purple</item>
        <item name="android:textColorHint">@color/light_purple</item>
        <item name="background">@color/transparent</item>
        <item name="passwordToggleTint">@color/additional_purple_3</item>
        <item name="editTextColor">@color/white_purple</item>
        <item name="startIconTint">@color/white_purple</item>
        <item name="errorIconTint">@color/error</item>
        <item name="boxStrokeErrorColor">@color/error</item>
        <item name="errorTextColor">@color/error</item>
    </style>

    <style name="LayoutBackground" parent="Widget.Support.CoordinatorLayout">
        <item name="android:background">@color/dark_purple_blue</item>
    </style>

    <style name="AuthorizationLayoutBackground" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:background">@color/dark_purple_blue</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/white_purple</item>
        <!--        <item name="barLength">40dp</item>-->
        <!--        <item name="gapBetweenBars">5dp</item>-->
        <!--        <item name="thickness">7dp</item>-->
        <item name="icon">@drawable/ic_menu</item>
    </style>


    <style name="ImageButtonStyle" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">105dp</item>
        <item name="android:layout_height">130dp</item>
        <item name="android:background">@color/white_purple</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="BookTitleItem" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white_purple</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
        <item name="android:scrollHorizontally">false</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BookSubTitleItem" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/light_purple</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:scrollHorizontally">false</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="ItemBookChapterTitleStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/purple_blue</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
        <item name="android:scrollHorizontally">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="TextMainTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white_purple</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="IconMainTitle">
        <item name="android:src">@drawable/ic_moon</item>
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="tint">@color/white_purple</item>
    </style>

    <style name="ItemChapterNumberStyle">
        <item name="android:textColor">@color/white_purple</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="ItemChapterTitleStyle">
        <item name="android:textColor">@color/purple_blue</item>
    </style>

    <style name="MainToolbarTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:background">@color/dark_purple_blue</item>
        <item name="android:textColor">@color/white_purple</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">26sp</item>
        <item name="tint">@color/white_purple</item>
        <item name="fontFamily">@font/bauhaus_93</item>
    </style>

    <style name="LogoStyle">
        <item name="android:src">@drawable/ic_logo_dark</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">150dp</item>
    </style>

    <style name="LogoTitle">
        <item name="android:textColor">@color/white_purple</item>

        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">32sp</item>
        <item name="fontFamily">@font/bauhaus_93</item>
    </style>

    <style name="AuthorizationSecondaryText">
        <item name="android:textColor">@color/light_purple</item>
        <item name="textAllCaps">true</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ProfileSecondaryText">
        <item name="android:textColor">@color/additional_purple_2</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="EditProfileToolbarTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:background">@color/white_purple</item>
        <item name="android:textColor">@color/indigo</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="tint">@color/indigo</item>
        <item name="backgroundTint">@color/transparent</item>
    </style>

    <style name="LikesToolbarTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:background">@color/white_purple</item>
        <item name="android:textColor">@color/indigo</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="tint">@color/indigo</item>
        <item name="backgroundTint">@color/transparent</item>
    </style>

    <style name="LikesUsername">
        <item name="android:textColor">@color/white_purple</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:ellipsize">none</item>
        <item name="android:scrollHorizontally">false</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">20dp</item>
    </style>

    <style name="LikeAvatarStyle" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:background">@color/white_purple</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="cardCornerRadius">40dp</item>
    </style>

    <style name="PlayerToolbarTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:background">@color/indigo</item>
        <item name="android:textColor">@color/white_purple</item>
        <item name="android:textStyle">bold</item>
        <item name="tint">@color/white_purple</item>
        <item name="backgroundTint">@color/transparent</item>
    </style>

    <style name="SecondaryPlayer">
        <item name="android:textColor">@color/light_purple</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="PlayerSeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:background">@color/light_purple</item>
        <item name="android:thumbTint">@color/dark_purple_blue</item>
        <item name="android:progressTint">@color/dark_purple_blue</item>
    </style>

    <style name="PlayerSeekBarLayout">
        <item name="android:background">@color/light_purple</item>
    </style>

    <style name="PlayerControl">
        <item name="android:background">@color/indigo</item>
    </style>

    <style name="PlayerControlButton">
        <item name="android:backgroundTint">@color/transparent</item>
        <item name="android:tint">@color/white_purple</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="PlayerTimeText">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/dark_purple_blue</item>
        <item name="android:lines">1</item>
    </style>

    <style name="PlayerImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:backgroundTint">@color/transparent</item>
        <item name="android:tint">@color/white_purple</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_height">30dp</item>
    </style>

    <style name="PlayerLikeText">
        <item name="android:textColor">@color/white_purple</item>
    </style>

    <style name="DrawerTheme" parent="Widget.Material3.DrawerLayout">
        <item name="android:background">@color/dark_purple_blue</item>
        <item name="itemTextColor">@color/white_purple</item>
        <item name="itemIconTint">@color/white_purple</item>

    </style>

    <attr name="secondaryPlayer" format="reference"/>
</resources>