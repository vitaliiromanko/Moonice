<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/forgotPasswordContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_cyan"
    android:padding="10dp"
    tools:context=".authorization.forgotpassword.ForgotPasswordActivity">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center_horizontal"
        >
        <ImageView
            android:id="@+id/logoLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_logolight" />
        <TextView
            android:id="@+id/registrationTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bauhaus_93"
            android:text="Remember Password"
            android:textAllCaps="true"
            android:textColor="@color/indigo"
            android:textSize="36sp"
            />
        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginTop="30dp"
            >

            <EditText
                android:id="@+id/activity_forgot_password_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/prompt_email"
                android:inputType="textEmailAddress"
                android:selectAllOnFocus="true"
                android:textColor="@color/indigo"
                android:textColorHint="@color/additional_purple_2"
                android:backgroundTint="@color/light_purple"
                android:layout_marginVertical="5dp"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/activity_forgot_password_reset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:backgroundTint="@color/purple_blue"
                android:paddingHorizontal="60dp"
                android:text="Send"
                android:textColor="@color/indigo"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/activity_forgot_password_back_to_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Log in"
                android:textAllCaps="true"
                android:textColor="@color/additional_purple_1"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                />

        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/loginCornerImage1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_cornerdecorlight"/>

    <ImageView
        android:id="@+id/loginCornerImage2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleY="-1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_cornerdecorlight"/>

    <ImageView
        android:id="@+id/loginCornerImage3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX="-1"
        android:scaleY="-1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_cornerdecorlight"/>

    <ImageView
        android:id="@+id/loginCornerImage4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX="-1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_cornerdecorlight"/>


</androidx.constraintlayout.widget.ConstraintLayout>