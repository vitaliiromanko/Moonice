<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.books.BooksFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white_cyan"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingTop="15dp"
            tools:context=".ui.home.HomeFragment">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_moon"
                    app:tint="@color/indigo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="10dp"
                    android:text="Popular Books"
                    android:textColor="@color/indigo"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:context=".MainActivity" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_moon"
                    app:tint="@color/indigo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="10dp"
                    android:text="New Chapters"
                    android:textColor="@color/indigo"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="10dp"
                        android:orientation="vertical"

                        >

                        <ImageButton
                            android:layout_width="120dp"
                            android:layout_height="130dp"
                            android:background="@drawable/book_item_1" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingHorizontal="2dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingVertical="2dp"
                                android:text="Romance"
                                android:textColor="@color/additional_purple_2" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="40sp"
                                android:ellipsize="end"
                                android:lines="2"
                                android:scrollHorizontally="false"
                                android:text="The Most Beautiful Kite in the World"
                                android:textColor="@color/indigo"
                                android:textSize="15sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="10dp"
                        android:orientation="vertical"

                        >

                        <ImageButton
                            android:layout_width="120dp"
                            android:layout_height="130dp"
                            android:background="@drawable/book_item_2" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingHorizontal="2dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingVertical="2dp"
                                android:text="Drama"
                                android:textColor="@color/additional_purple_2" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="40sp"
                                android:ellipsize="none"
                                android:scrollHorizontally="false"
                                android:text="Throne of glass"
                                android:textColor="@color/indigo"
                                android:textSize="15sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="10dp"
                        android:orientation="vertical"

                        >

                        <ImageButton
                            android:layout_width="120dp"
                            android:layout_height="130dp"
                            android:background="@drawable/book_item_3" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingHorizontal="2dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingVertical="2dp"
                                android:text="Thriller"
                                android:textColor="@color/additional_purple_2" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="40sp"
                                android:ellipsize="none"
                                android:scrollHorizontally="false"
                                android:text="The bazaar of bad dreams"
                                android:textColor="@color/indigo"
                                android:textSize="15sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="10dp"
                        android:orientation="vertical"

                        >

                        <ImageButton
                            android:layout_width="120dp"
                            android:layout_height="130dp"
                            android:background="@drawable/universe_button" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingHorizontal="2dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingVertical="2dp"
                                android:text="Drama"
                                android:textColor="@color/additional_purple_2" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="40sp"
                                android:ellipsize="none"
                                android:scrollHorizontally="false"
                                android:text="The Adventures of Princess..."
                                android:textColor="@color/indigo"
                                android:textSize="15sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </HorizontalScrollView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_moon"
                    app:tint="@color/indigo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="10dp"
                    android:text="Top Drama"
                    android:textColor="@color/indigo"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="10dp"
                        android:orientation="vertical"

                        >

                        <ImageButton
                            android:layout_width="120dp"
                            android:layout_height="130dp"
                            android:background="@drawable/book_item_4" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingHorizontal="2dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingVertical="2dp"
                                android:text="Drama"
                                android:textColor="@color/additional_purple_2" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="40sp"
                                android:ellipsize="end"
                                android:lines="2"
                                android:scrollHorizontally="false"
                                android:text="Electric power in the United States"
                                android:textColor="@color/indigo"
                                android:textSize="15sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="10dp"
                        android:orientation="vertical"

                        >

                        <ImageButton
                            android:layout_width="120dp"
                            android:layout_height="130dp"
                            android:background="@drawable/book_item_5" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingHorizontal="2dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingVertical="2dp"
                                android:text="Drama"
                                android:textColor="@color/additional_purple_2" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="40sp"
                                android:ellipsize="end"
                                android:lines="2"
                                android:scrollHorizontally="false"
                                android:text="No more pencils, no more books, no more teacher's dirty looks!"
                                android:textColor="@color/indigo"
                                android:textSize="15sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="10dp"
                        android:orientation="vertical"

                        >

                        <ImageButton
                            android:layout_width="120dp"
                            android:layout_height="130dp"
                            android:background="@drawable/book_item_6" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingHorizontal="2dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingVertical="2dp"
                                android:text="Drama"
                                android:textColor="@color/additional_purple_2" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="40sp"
                                android:ellipsize="end"
                                android:lines="2"
                                android:scrollHorizontally="false"
                                android:text="Research directions in object-oriented programming"
                                android:textColor="@color/indigo"
                                android:textSize="15sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="10dp"
                        android:orientation="vertical"

                        >

                        <ImageButton
                            android:layout_width="120dp"
                            android:layout_height="130dp"
                            android:background="@drawable/universe_button" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingHorizontal="2dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingVertical="2dp"
                                android:text="Drama"
                                android:textColor="@color/additional_purple_2" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="40sp"
                                android:ellipsize="none"
                                android:scrollHorizontally="false"
                                android:text="The Adventures of Princess..."
                                android:textColor="@color/indigo"
                                android:textSize="15sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </HorizontalScrollView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_moon"
                    app:tint="@color/additional_purple_1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="10dp"
                    android:text="Top Fantasy"
                    android:textColor="@color/additional_purple_1"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_moon"
                    app:tint="@color/additional_purple_1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="10dp"
                    android:text="Top Thriller"
                    android:textColor="@color/additional_purple_1"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_moon"
                    app:tint="@color/additional_purple_1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="10dp"
                    android:text="Top Comedy"
                    android:textColor="@color/additional_purple_1"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_moon"
                    app:tint="@color/additional_purple_1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="10dp"
                    android:text="Top Romance"
                    android:textColor="@color/additional_purple_1"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>