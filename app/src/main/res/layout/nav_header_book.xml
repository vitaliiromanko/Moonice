<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:background="@drawable/universe_button"
    android:backgroundTint="#B23D085E"
    android:backgroundTintMode="src_atop"
    android:orientation="vertical"
    android:paddingVertical="5dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="70dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            app:cardCornerRadius="4dp">

            <ImageView
                android:id="@+id/nav_header_book_book_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/indigo"
                android:contentDescription="@string/nav_header_desc"
                android:scaleType="centerCrop"
                android:src="@drawable/book_item_2" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/book_title_header_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:scrollHorizontally="false"
                android:text="Throne of glass"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/white_cyan"
                android:textSize="18sp"
                android:textStyle="bold"

                />

            <TextView
                android:id="@+id/book_author_header_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:paddingTop="@dimen/nav_header_vertical_spacing"
                android:scrollHorizontally="true"
                android:text="Sarah J. Maas, 2018"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/light_purple"
                android:textStyle="bold"

                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:text="Description"
            android:textColor="@color/light_purple"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/book_description_header_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="5"
            android:text="Throne of Glass follows Celaena Sardothien, a 18-year-old assassin in the Kingdom of Adarlan. After a year of suffering for her crimes in a slave camp called Endovier, she accepts the offer of Crown Prince Dorian, the King of Adarlan's son, to compete with other assassins."
            android:textColor="@color/purple_blue" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:text="Genre"
            android:textColor="@color/light_purple"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/book_genre_header_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:text="Drama"
            android:textColor="@color/purple_blue" />
    </LinearLayout>
</LinearLayout>